#!/usr/bin/env node

var path = require('path-extra');
var fs = require('fs');

if(process.env.POUCHDB_NAME === undefined) {
  var defaultDir = path.join(path.homedir(), '.cozy-data-system-dev');
  if(!fs.existsSync(defaultDir)) {
    fs.mkdirSync(defaultDir);
  }
  process.chdir(defaultDir);
}

var root = path.join(__dirname, '..', 'build');
var start = require(path.join(root, 'server'));

start({root: root, defaultDir: defaultDir}, function() {});

